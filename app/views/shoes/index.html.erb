<p id="notice"><%= notice %></p>

<h1>Listing Shoes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Civilian</th>
      <th>Size</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.id %></td>
        <td><%= shoe.civilian.first_name %> <%= shoe.civilian.last_name %></td>
        <td><%= shoe.size %></td>
        <td><%= shoe.brand %></td>
        <td><%= link_to 'Show', shoe %></td>
	<% if can_access? %>
        	<td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        	<td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can_access? %>
	<%= link_to 'New Shoe', new_shoe_path %>
<%end%>
