<p id="notice"><%= notice %></p>

<h1>Listing Civilians</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @civilians.each do |civilian| %>
      <tr>
        <td><%= civilian.first_name %></td>
        <td><%= civilian.last_name %></td>
        <td><%= civilian.address %></td>
        <td><%= civilian.city %></td>
	<td><%= link_to 'Show', civilian %></td>

	<% if current_user.role == "admin" %>
        	<td><%= link_to 'Edit', edit_civilian_path(civilian) %></td>
        	<td><%= link_to 'Destroy', civilian, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
	</tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.role == "admin" %>
	<%= link_to 'New Civilian', new_civilian_path %>
<%end%>
