<p id="notice"><%= notice %></p>
<br>
<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th class="id">ID</th>
      <th>Civilian</th>
      <th>Job name</th>
      <th class="noborder" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td class="id"><%= job.id %></td>
        <td><%= job.civilian.first_name %> <%= job.civilian.last_name %></td>
        <td><%= job.job_name %></td>
        <td class="bttn" ><%= link_to 'Show', job %></td>
	<% if can_access? %>
	        <td class="bttn"><%= link_to 'Edit', edit_job_path(job) %></td>
        	<td class="bttn"><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can_access? %>
	<div class="bttn bttn--new">
		<%= link_to 'New Job', new_job_path %>
	</div>
<%end%>
