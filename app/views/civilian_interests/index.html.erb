<p id="notice"><%= notice %></p>

<h1>Listing Civilian Interests</h1>

<table>
  <thead>
    <tr>
      <th>Civilian</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @civilian_interests.each do |civilian_interest| %>
      <tr>
        <td><%= civilian_interest.civilian.first_name %> <%= civilian_interest.civilian.last_name %></td>
        <td><%= civilian_interest.interest.name %></td>
        <td><%= link_to 'Show', civilian_interest %></td>
	<% if can_access? %>
        	<td><%= link_to 'Edit', edit_civilian_interest_path(civilian_interest) %></td>
        	<td><%= link_to 'Destroy', civilian_interest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can_access? %>
	<%= link_to 'New Civilian interest', new_civilian_interest_path %>
<%end%>
